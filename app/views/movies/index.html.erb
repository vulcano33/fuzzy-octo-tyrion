<h1>Listing movies</h1>

<div id="movieCarousel" class="carousel slide">
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><%= image_tag "banner/drive_angry_banner.jpg" %></div>
    <div class="item"><%= image_tag "banner/megamind_banner.jpg" %></div>
    <div class="item"><%= image_tag "banner/scary_movie_banner.jpg" %></div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left " href="#movieCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#movieCarousel" data-slide="next">&rsaquo;</a>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Rate</th>
    <th>Description</th>
    <th>Director</th>
    <th>Genre</th>
    <th>Year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.rate %></td>
    <td><%= movie.description %></td>
    <td><%= movie.director %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.year %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

